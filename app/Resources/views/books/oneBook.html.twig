{% extends 'base.html.twig' %}
{% block title %}book {{ book.isbn }}{% endblock %}
{% block body %}
    <h1>Book</h1>

    <table>
        <tbody>
        <tr>
            <th>ISBN</th>
            <td>{{ book.isbn }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ book.title }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ book.author }}</td>
        </tr>
        <tr>
            <th>Publisher</th>
            <td>{{ book.publisher }}</td>
        </tr>
        <tr>
            <th>Date of publication</th>
            <td>{{ book.date }}</td>
        </tr>
        <tr>
            <th>Catagory</th>
            <td>{{ book.catagory }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ book.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('book_index') }}">Back to the list</a>
        </li>
        {% if is_granted('ROLE_STAFF') %}{#only show this option if staff user#}
        <li>
            <a href="{{ path('book_edit', { 'id': book.isbn }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
